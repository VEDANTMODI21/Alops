# ğŸ§± Base image with Ruby
FROM ruby:3.3

# ğŸ“ Set working directory
WORKDIR /app

# ğŸ§° Install system dependencies
RUN apt-get update -qq && apt-get install -y \
  build-essential \
  curl \
  gnupg \
  nodejs \
  npm \
  libpq-dev \
  sqlite3

# ğŸ“¦ Install Yarn v1 (compatible with Rails JS bundling)
RUN npm install -g yarn@1.22.19

# ğŸ“¦ Install correct Bundler version
RUN gem install bundler -v 2.6.9

# ğŸ’ Configure bundler
COPY Gemfile Gemfile.lock ./
RUN bundle config set force_ruby_platform true
RUN bundle install

# ğŸ“‚ Copy rest of app
COPY . .

# âš™ï¸ JavaScript dependencies and bundling
RUN yarn install --check-files
RUN bundle exec rails javascript:build

# ğŸ¨ Asset precompilation
RUN bundle exec rake assets:precompile

# ğŸšª Open port and run the Rails server
CMD ["rails", "server", "-b", "0.0.0.0"]

